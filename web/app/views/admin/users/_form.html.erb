<%= simple_form_for [:admin, @user] do |f| %>
<%= hidden_field_tag :referer_url, request.env["HTTP_REFERER"] %>
<%= f.input :name %>
<%= f.input :email %>
<%= f.input :password %>
<%= f.input :role, :collection=> [:user, :admin] %>
<br>
<div class="actions">
	<%= f.submit "Submit", :class => "btn btn-success" %>
</div>

<% end %>
