<%= simple_form_for [:admin, @camera] do |f| %>
<%= hidden_field_tag :referer_url, request.env["HTTP_REFERER"] %>
<table>
	<tr>
		<td>
			<%= f.input :image, :as => :file %>
			<%= f.input :name1 %>
			<%= f.input :name2 %>
			<%= f.input :name3 %>
			<%= f.input :mount, :collection => [:"EF-S", :"EF-M", :EF, :F, :"1", :K, :E, :"4/3", :"m4/3", :NX, :A, :SA, :N, :X, :Q, :M, :M42, :S, :"645A"] %>
			<%= f.input :company, :collection => [:Canon, :Nikon, :Sony, :Pentax, :Samsung, :Panasonic, :Olympus, :Fujifilm, :Minolta, :Kodak, :Leica, :Sigma, :Epson] %>
			<%= f.association :class_range %>
			<%= f.input :release_date, start_year: 1991, end_year: Date.today.year, discard_month: true, discard_hour: true, discard_minute: true %>
		</td>
		<td>
			<%= f.input :sensor_size, :collection => Camera::SENSORS %>
			<%= f.input :sensor_pixel %>
			<%= f.input :sensor_type, :collection => [:CMOS, :CCD, :LBCAST, :"2 CCD", :"3 CCD", :SuperCCD] %>
			<%= f.input :image_processor %>
			<br>
			<%= f.input :fps %>
			<%= f.input :shutter_speed %>
			<br>
			<%= f.input :metering %>
			<%= f.input :iso_low %>
			<%= f.input :iso_high %>
		</td>
		<td>
			<%= f.input :af_sensor %>
			<%= f.input :af_points_total %>
			<%= f.input :af_points_cross %>
			<br>
			<%= f.input :mirror_type, :collection => [:"pentaprism", :"pentamirror", :"porromirror", :"EVF", :"rangefinder"] %>
			<%= f.input :finder_magnify %>
			<%= f.input :finder_coverage %>
			<br>
			<%= f.input :lcd_size %>
			<%= f.input :lcd_pixel %>
			<%= f.input :lcd_type, :collection => [:"Normal", :"Tilt", :"Tilt & Swivel"] %>
			<%= f.input :lcd_etc %>
		</td>
		<td>
			<%= f.input :storage %>
			<%= f.input :power %>
			<br>
			<%= f.input :shake_reduction, label_html: { :class => "di ml5" } %>
			<br>
			<%= f.input :liveview, label_html: { :class => "di ml5" } %>
			<br>
			<%= f.input :sealing, label_html: { :class => "di ml5" } %>
			<br>
			<%= f.input :v4000fps %>
			<%= f.input :v4000scan, :collection => [:progressive, :interlaced] %>
			<%= f.input :v1080fps %>
			<%= f.input :v1080scan, :collection => [:progressive, :interlaced] %>
			<%= f.input :v720fps %>
			<%= f.input :v720scan, :collection => [:progressive, :interlaced] %>
			<%= f.input :video_format %>
		</td>
	</tr>
	<tr>
		<td>
			<%= f.input :d_width %>
			<%= f.input :d_height %>
			<%= f.input :d_depth %>
			<%= f.input :weight %>
		</td>
		<td>
			<%= f.input :status, :collection => [:pending, :running] %>
			<%= f.input :more_info, input_html: { rows: 3 } %>
		</td>
	</tr>
</table>
<br>
<div class="actions">
	<%= f.submit "Submit", :class => "btn btn-success" %>
</div>

<% end %>
